{
  "description": "When a LineItem is flagged as invalid, the errors use this schema.",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "minLength": 1
    },
    "details": {
      "type": "object",
      "properties": {
        "lineNumber": {
          "type": "number"
        },
        "property": {
          "type": "string",
          "minLength": 1
        },
        "reason": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "lineNumber",
        "property",
        "reason"
      ]
    },
    "message": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": [
    "type",
    "details",
    "message"
  ],
  "x-examples": {
    "example-1": {
      "type": "InvalidPersonalization",
      "details": {
        "lineNumber": 1,
        "property": "Top Text",
        "reason": "INVALID_LENGTH"
      },
      "message": "Line Item #1 has invalid property 'Top Text': 'undefined'. Reason: INVALID_LENGTH"
    }
  },
  "examples": [
    {
      "type": "InvalidPersonalization",
      "details": {
        "lineNumber": 1,
        "property": "Top Text",
        "reason": "INVALID_LENGTH"
      },
      "message": "Line Item #1 has invalid property 'Top Text': 'undefined'. Reason: INVALID_LENGTH"
    },
    {
      "type": "BadCharacter",
      "details": {
        "lineNumber": 1,
        "property": "Bottom Text",
        "value": "Test-Example",
        "pattern": "^[a-zA-Z0-9\\s!?.,\\’”()&$%#@/]*$",
        "reason": "BAD_CHARACTER"
      },
      "message": "Line Item #1 has a bad character in property 'Bottom Text': 'Test-Example'. Reason: BAD_CHARACTER"
    },
    {
      "type": "MissingPersonalization",
      "details": {
        "lineNumber": 1,
        "property": "Initial",
        "reason": "MISSING"
      },
      "message": "Line Item #1 is missing property 'Initial'."
    }
  ]
}