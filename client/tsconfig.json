{
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ],
      "pages": [
        "src/pages"
      ],
      "components": [
        "src/components"
      ],
      "assets": [
        "src/assets"
      ],
      "context": [
        "src/context"
      ],
      "utils": [
        "src/utils"
      ],
      "state": [
        "src/state"
      ],
      "app": [
        "src/app"
      ],
      "content": [
        "src/content"
      ],
      "layouts": [
        "src/layouts"
      ],
      "router": [
        "src/router"
      ],
    },
    "target": "ES6",
    "moduleResolution": "node",
    "module": "ES2022",
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "jsx": "react",
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
  }
}