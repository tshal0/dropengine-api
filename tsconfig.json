{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@shared/*": [
        "shared/*"
      ],
      "@users/*": [
        "users/*"
      ],
      "@shopify/*": [
        "shopify/*"
      ],
      "@db/*": [
        "/shared/modules/prisma/*"
      ]
    },
  },
}