{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@shared/*": [
        "src/shared/*"
      ],
      "@catalog/*": [
        "src/catalog/*"
      ],
      "@users/*": [
        "src/users/*"
      ],
      "@shopify/*": [
        "src/shopify/*"
      ]
    },
  },
  "exclude": [
    "dist",
    "jest*.ts"
  ]
}